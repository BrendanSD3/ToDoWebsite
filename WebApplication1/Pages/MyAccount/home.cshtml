            <img class="card-img-top" src="~/images/img_avatar1.png" alt="Card image" style="width:100%">
            <div class="card-body">
                <h4 class="card-title">Welome @UserManager.GetUserName(User)!</h4>
                <p class="card-text">Click here to manage your profile details or reset a passowrd</p>
                <a id="manage" title="Manage" asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary stretched-link">Manage Profile</a>
            </div>
        </div>
   
    </div>
    <div class="container">
        <div class="card" style="width:400px;">
           <div class="card-header">
               <h2>Please fill out the form below </h2>
           </div>
           <div class="card-body">
               <form asp-page-handler="view"  method="post">
                   <div class="field">
                       <label for="wsName">Worksheet Name</label>
                       <input type="text" name="wsName" id="wsName" required />
                   </div>
                   <div id="nameandoccp">
                   <div class="field">
                       <label for="FName1">First Name <span aria-hidden="true">*</span></label>
                       <input type="text" name="FName1" id="FName1" required />
                       <a class="fa fa-plus" style="font-size:24px" id="add" onclick="add();" title="add another name"></a>
                   </div>
                   
                   <div class="field">
                       <label for="Occup1">Occupation <span aria-hidden="true">*</span></label>
                       <input type="text" name="Occup1" id="Occup1" required />
                   </div>
                       </div>
                   <input type="number" name="add1" id="add1" value="1" />
                   <button class="btn btn-primary">Submit</button>
               </form>
           </div>
        </div>
    </div>


